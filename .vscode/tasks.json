{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Image",
      "type": "shell",
      "command": "docker build -t mysql-template .",
      "problemMatcher": [],
      "detail": "Builds the MySQL image with embedded SQL scripts"
    },
    {
      "label": "Run Container",
      "type": "shell",
      "command": "docker run --env-file .env -d --name mysql-template-db -p 127.0.0.1:3307:3306 -v mysql-data:/var/lib/mysql mysql-template",
      "problemMatcher": [],
      "detail": "Runs the MySQL container using your mysql-template image"
    },
    {
      "label": "Stop & Remove Container",
      "type": "shell",
      "command": "docker stop mysql-template-db && docker rm mysql-template-db",
      "problemMatcher": []
    },
    {
      "label": "Stop Container",
      "type": "shell",
      "command": "docker stop mysql-template-db",
      "problemMatcher": []
    },
    {
      "label": "Remove Container",
      "type": "shell",
      "command": "docker rm mysql-template-db",
      "problemMatcher": []
    },
  ]
}
